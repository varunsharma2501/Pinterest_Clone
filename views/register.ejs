<% include ./partials/header.ejs %>
  <div class="w-full h-screen bg-center bg-cover flex items-center justify-center bg-zinc-400">
    <div class="w-[25vw] bg-white px-20 py-10 rounded-[30px]">
      <h1 class="text-3xl text-center font-semibold text-zinc-700 leading-none">Create you Account!</h1>
      <form action="/user/register" method="post">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="username">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="email" name="email" placeholder="email">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="fullname" placeholder="fullname">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="date" name="dob" placeholder="dd-mm-yy">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="country" placeholder="country">
        <input class="border-2 rounded-full block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Register Account">
        <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service; Opens a new tab and acknowledge you've read our Privacy Policy; Opens a new tab. Notice at collection; Opens a new tab.</p>
      </form>
      <a href="/user/login" class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full">Already have an account?Login.</a>
    </div>
  </div> 
<% include ./partials/footer.ejs %>