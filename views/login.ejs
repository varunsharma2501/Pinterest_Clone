<% include ./partials/header.ejs %>
  <div class="w-full h-screen bg-center bg-cover flex items-center justify-center bg-[url('https://images.unsplash.com/photo-1552083974-186346191183?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MjB8fGFic3RyYWN0fGVufDB8fDB8fHww')]">
    <div class="w-[25vw] bg-white px-20 py-10 rounded-[30px]">
      <h1 class="text-3xl text-center font-semibold text-zinc-700 leading-none">Welcome to pinterest</h1>
      <% if(error.length>0) {%>
        <p class="error"><%= error %></p>
        <% } %>
      <form action="/user/login" method="post">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="username">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
        <a class="mt-2 font-semibold text-zinc-500 inline-block text-center" href="#">Forgot Password?</a>
        <input class="border-2 rounded-full block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit">
        <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service; Opens a new tab and acknowledge you've read our Privacy Policy; Opens a new tab. Notice at collection; Opens a new tab.</p>
      </form>
      <a href="/user/register" class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full">Dont have an account?Sign Up.</a>
    </div>
  </div> 
<% include ./partials/footer.ejs %>