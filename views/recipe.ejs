<% include ./partials/header.ejs %>

<div class="container mx-auto p-4">
  <!-- Title and Rating -->
  <div class="text-center mb-8">
    <h1 class="text-4xl font-bold"><%= recipe.title %></h1>
    <div class="flex justify-center items-center mt-2">
      <% for (let i = 0; i < 5; i++) { %>
        <% if (i < recipe.rating) { %>
          <i class="fas fa-star text-yellow-500"></i>
        <% } else { %>
          <i class="far fa-star text-yellow-500"></i>
        <% } %>
      <% } %>
      <span class="ml-2 text-gray-600"><%= recipe.reviews %> reviews</span>
    </div>
  </div>

  <!-- User Info Box -->
  <div class="flex mb-8">
    <div class="w-1/4">
      <div class="bg-gray-100 p-4 rounded-lg shadow-md">
        <img src="<%= recipe.user.dp %>" alt="<%= recipe.user.fullname %>" class="w-32 h-32 rounded-full mx-auto mb-4">
        <h2 class="text-center text-xl font-bold"><%= recipe.user.fullname %></h2>
        <p class="text-center text-gray-600"><%= recipe.user.country %></p>
        <p class="text-center text-gray-600 mt-2"><%= recipe.user.reviews %></p>
      </div>
    </div>

    <!-- Recipe Image -->
    <div class="w-3/4">
      <img src="<%= recipe.image %>" alt="<%= recipe.title %>" class="w-full h-auto rounded-lg shadow-md">
    </div>
  </div>

  <!-- Ingredients Checklist -->
  <div class="bg-gray-100 p-4 rounded-lg shadow-md mb-8">
    <h2 class="text-2xl font-bold mb-4">Ingredients</h2>
    <ul>
      <% recipe.ingredients.forEach(ingredient => { %>
        <li class="flex items-center mb-2">
          <input type="checkbox" class="mr-2">
          <span><%= ingredient %></span>
        </li>
      <% }) %>
    </ul>
  </div>

  <!-- Recipe Description -->
  <div class="bg-gray-100 p-4 rounded-lg shadow-md mb-8">
    <h2 class="text-2xl font-bold mb-4">Recipe</h2>
    <p><%= recipe.description %></p>
  </div>

  <!-- Video Button -->
  <div class="text-center">
    <a href="<%= recipe.video %>" target="_blank" class="inline-block bg-blue-500 text-white px-6 py-3 rounded-lg shadow-md hover:bg-blue-600 transition duration-300">
      Watch Video
    </a>
  </div>
</div>

<% include ./partials/footer.ejs %>
